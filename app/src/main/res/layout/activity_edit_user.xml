<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.Admin.EditUserActivity"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_span"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/txtEditUserCompleteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_span"
            android:textSize="18sp"
            android:fontFamily="@font/rubik_light"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rcVwPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/recycler_padding">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/lblNotPaymentsFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_element_found"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/rubik_medium"
            android:visibility="invisible"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>




</androidx.core.widget.NestedScrollView>